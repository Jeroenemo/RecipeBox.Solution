@{
  Layout = "_Layout";
}
@model List<RecipeBox.Models.Tag>;

<h1>Recipe Box</h1>
@if (@Model.Count == 0)
{
  <h3>No tags have been created yet</h3>
  <p>@Html.ActionLink("Add new Tag", "Create", "Tags")</p>
}
else
{
  <p>@Html.ActionLink("See all Tags", "Index", "Tags")</p>
  <p>@Html.ActionLink("See all Recipes", "Index", "Recipes")</p>
}

<p>@Html.ActionLink("Create an account", "Index", "Account")</p>
