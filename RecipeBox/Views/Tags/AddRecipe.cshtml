@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag;

<div class="header">Add a Recipe</div>

<h4>Add a Recipe to this Tag: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TagId)

  @Html.Label("Select Recipe")
  @Html.DropDownList("RecipeId")

  <input type="submit" value="Save" />
}

<p>Back to @Html.ActionLink("recipe list", "Index")</p>