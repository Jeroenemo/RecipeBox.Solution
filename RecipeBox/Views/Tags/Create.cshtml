@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<div class="header">Add a new tag</div>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { @required="required" })

  <input type="submit" value="Add new tag" class="btn btn-default">
}

<p>@Html.ActionLink("Return to All Tags", "Index")</p>