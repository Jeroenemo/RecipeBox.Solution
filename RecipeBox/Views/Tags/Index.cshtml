@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<div class="header">Tags</div>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet</h3>
}

<ul>
  @foreach (Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.Name}", "Details", new { id = tag.TagId })</li>
  }
</ul>

<tr>
<td>@Html.ActionLink("Add new tag", "Create")</td> |

<td>@Html.ActionLink("Back", "Index", "Home")</td>
</tr>
